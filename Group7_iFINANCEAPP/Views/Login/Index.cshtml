
@{
    ViewBag.Title = "LoginPage";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <style>
        .login-wrapper {
            display: flex;
            height: 100vh;
        }

        .login-form-section {
            flex: 1;
            padding: 60px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background-color: white;
        }

        .login-card {
            background-color: #f5f5f5;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
            max-width: 560px;
            min-height: 610px;
            width: 100%;
            margin: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .login-form-section h2 {
            font-weight: 600;
        }

        .logo-section {
            display: flex;
            flex-direction: row;
            align-items: flex-start;
            align-self: flex-start;
            gap: 10px;
            margin-bottom: 30px;
        }

        .form-content {
            padding: 80px 10px;
            text-align: left;
            width: 300px;
        }

        .illustration-section {
            flex: 1;
            background-color: white;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .illustration-section img {
                max-width: 90%;
                height: auto;
            }

            .illustration-section lottie-player {
                width: 90%;
                height: auto;
            }

        .btn-purple {
            background-color: #8058ac;
            border-color: #8058ac;
            color: white;
            width: 300px;
        }

            .btn-purple:hover {
                background-color: #7048a0;
                border-color: #7048a0;
                color: white;
            }

            .btn-purple:active {
                background-color: #7048a0;
            }
    </style>

    <div class="login-wrapper">
        <div class="login-form-section">
            <div class="login-card">
                <div class="logo-section">
                    <img src="~/Content/images/logo.png" alt="iFINANCE Logo" style="height: 50px; width: 50px;" />
                    <h1 class="mb-0">iFINANCE</h1>
                </div>

                <div class="form-wrapper">
                    <div class="form-content">
                        <h2 class="mb-2">Login</h2>
                        <p class="text-muted mb-4">Please enter your details</p>

                        <div class="form-group">
                            <label for="username" class="control-label col-md-2">Username</label>
                            <input id="username" class="form-control text-box single-line" name="username" type="text" value="" />
                        </div>

                        <div class="form-group">
                            <label for="password" class="control-label col-md-2">Password</label>
                            <input id="password" class="form-control text-box single-line" name="password" type="password" value="" />
                        </div>


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10" style="margin-top: 10px;">
                                <input type="submit" value="Login" class="btn btn-purple" />
                            </div>
                        </div>

                        <p class="text-danger">@ViewBag.ValidationError</p>

                    </div>
                </div>
            </div>
        </div>

        <div class="illustration-section">
            <img src="~/Content/images/iFINANCE-login_1.gif" alt="Login Illustration" />
        </div>
    </div>

}
@model Group7_iFINANCEAPP.Models.TransactionLine

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this transaction line?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Credit Value
        </dt>

        <dd>
            @Html.DisplayFor(model => model.creditedAmount)
        </dd>

        <dt>
            Credit Account
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MasterAccount.name)
        </dd>

        <dt>
            Debit Value
        </dt>

        <dd>
            @Html.DisplayFor(model => model.debitedAmount)
        </dd>

        <dt>
            Debit Account
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MasterAccount1.name)
        </dd>

        <dt>
            Comment
        </dt>

        <dd>
            @Html.DisplayFor(model => model.comment)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" />
            @Html.ActionLink("Back to List", "Index", "Transactions", null, new {@class = "btn btn-secondary"})
        </div>
    }
</div>

@model Group7_iFINANCEAPP.Models.Group

@{
    ViewBag.Title = "Delete";
}

<div class="container my-5">
    <div class="card shadow-sm rounded-4 p-5">
        <h2 class="text-center mb-4">Delete Group</h2>
        <h3 class="text-center text-danger mb-4">Are you sure you want to delete this?</h3>
@if (Model.Groups.Count > 0)
            {
    <div class="alert alert-warning"><h6>This group contains subgroups that will also be deleted.</h6></div>
            }
@if (Model.MasterAccount.Count > 0)
            {
                <div class="alert alert-warning"><h6>This group contains accounts that will also be deleted.</h6></div>
            }
        <div>
            <h4 class="mb-3">Group Details</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Name
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.name)
                </dd>

                <dt>
                    Account Category
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.AccountCategory.name)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="text-center mt-4">
                    <input type="submit" value="Delete" class="btn btn-danger btn-lg me-3" />
                    @Html.ActionLink("Back to List", "Index", "Groups", null, new { @class = "btn btn-secondary btn-lg" })
                </div>
            }
        </div>
    </div>
</div>

<style>
    .btn-primary {
        background-color: #8058ac;
        border-color: #8058ac;
    }

    .btn-primary:hover {
        background-color: #7048a0;
        border-color: #7048a0;
    }

    .btn-primary:active {
        background-color: #7048a0;
    }
</style>
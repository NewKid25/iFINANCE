@helper RenderSubgroup(Group7_iFINANCEAPP.Models.Group group)
{
    <details>
        <summary>
            @group.name @Html.ActionLink("Edit", "Edit", new { id = group.ID }) |
            @Html.ActionLink("Details", "Details", new { id = group.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = group.ID })
        </summary>
        @foreach (var subgroup in group.Groups)
        {
            @RenderSubgroup(subgroup)
        }
    </details>
}

@foreach (var group in Model.Where(i => i.parentID == null))
{
    @RenderSubgroup(group)
}
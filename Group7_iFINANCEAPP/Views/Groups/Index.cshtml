@model IEnumerable<Group7_iFINANCEAPP.Models.Group>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@helper RenderSubgroup(Group7_iFINANCEAPP.Models.Group group)
{
    <details>
        <summary>
            @group.name @Html.ActionLink("Edit", "Edit", new { id = group.ID }) |
            @if (group.Groups.Count == 0)
            {
                @Html.ActionLink("Delete", "Delete", new { id = group.ID })
            } else
            {
                <span class="disabled-link" title="Must delete all subgroups first">Delete</span>
            }
        </summary>
        @foreach (var subgroup in group.Groups)
        {
            @RenderSubgroup(subgroup)
        }
        @Html.ActionLink("Create New", "Create", new { accountCategoryId = group.AccountCategoryID, parentId = group.ID })
    </details>
}

@foreach (Group7_iFINANCEAPP.Models.AccountCategory accountCategory in ViewBag.AccountCategories)
            {
                <details>
                    <summary>
                        @accountCategory.name
                    </summary>
                    @foreach (var group in accountCategory.Group.Where(i => i.parentID == null))
                    {
                        @RenderSubgroup(group)
                    }

                    @Html.ActionLink("Create New", "Create", new { accountCategoryId = accountCategory.ID })

                </details>
            }



<style>
    details details, details > a {
        margin-left: 20px;
    }

    .disabled-link {
        color: cadetblue;
        text-decoration: underline dotted;
    }
</style>
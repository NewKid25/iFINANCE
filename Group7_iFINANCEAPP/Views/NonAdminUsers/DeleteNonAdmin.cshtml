@model Group7_iFINANCEAPP.Models.NonAdminUser

@{
    ViewBag.Title = "Delete";
}

<div class="container my-5">
    <h2 class="text- text-center mb-2">Delete User</h2>
    <h4 class="text-danger text-center mb-4">Are you sure you want to delete this?</h4>

    <div class="card shadow-sm rounded-4 p-5">
        <div class="card-body">
            <h4 class="card-title mb-4">User Details</h4>
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.name)</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.address)</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.email)</dd>

                <dt class="col-sm-3">Created By</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Administrator.name)</dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="mt-4 d-flex gap-2">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>

<style>
    .btn-primary {
        background-color: #8058ac;
        border-color: #8058ac;
    }

    .btn-primary:hover {
        background-color: #7048a0;
        border-color: #7048a0;
    }
</style>
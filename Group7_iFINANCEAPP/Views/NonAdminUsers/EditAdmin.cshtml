@model Group7_iFINANCEAPP.Models.Administrator

@{
    ViewBag.Title = "Edit";
}

<div class="container my-5">
    <div class="card shadow-sm rounded-4 p-5">
        <h2 class="text-center mb-4">Edit Administrator</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)

                    <div class="mb-3">
                        @Html.LabelFor(model => model.name, "Name", htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.dateHired, "Date Hired", htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.dateHired, new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = (Model.dateHired != null ? ((DateTime)Model.dateHired).ToString("yyyy-MM-dd") : "" )} })
                        @Html.ValidationMessageFor(model => model.dateHired, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.dateFinished, "Date Finished", htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.dateFinished, new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = (Model.dateFinished != null ? ((DateTime)Model.dateFinished).ToString("yyyy-MM-dd") : "") } })
                        @Html.ValidationMessageFor(model => model.dateFinished, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input id="password" name="password" type="password" class="form-control" />
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a href="@Url.Action("Index", "NonAdminUsers")" class="btn btn-secondary">Back to List</a>
                    </div>
            </div>
        }
    </div>
</div>

<style>
    .btn-primary {
        background-color: #8058ac;
        border-color: #8058ac;
    }

    .btn-primary:hover {
        background-color: #7048a0;
        border-color: #7048a0;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

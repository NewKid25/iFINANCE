@model Group7_iFINANCEAPP.Models.ViewModels.ManageUsersViewModel

@{
    ViewBag.Title = "Manage Users";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Manage Users</h2>
    
    <div class="search-bar" style="display: flex; flex-direction: column; align-items: flex-end;">
        @using (Html.BeginForm("Index", "ManageUsers", FormMethod.Get, new { @class = "d-flex", role = "search", style = "margin-bottom: 20px;" }))
        {
            <input class="form-control me-2" type="search" name="searchString" value="@Request.QueryString["searchString"]" placeholder="Search by name" aria-label="Search" />
            <input type="hidden" name="tab" value="@Model.ActiveTab" />
            <button class="btn btn-outline-success search-button" type="submit">Search</button>
        }
    </div>

    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link @(Model.ActiveTab == "nonadmin" ? "active" : "")" id="nonadmin-tab"
               href="@Url.Action("Index", new { tab = "nonadmin" })" role="tab">Non-Admin Users</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link @(Model.ActiveTab == "admin" ? "active" : "")" id="admin-tab"
               href="@Url.Action("Index", new { tab = "admin" })" role="tab">Admin Users</a>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade @(Model.ActiveTab == "nonadmin" ? "show active" : "")" id="nonadmin" role="tabpanel" aria-labelledby="nonadmin-tab">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4>Non-Admin Users</h4>
                @Html.ActionLink("Add New User", "CreateNonAdmin", null, new { @class = "btn btn-primary" })
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Email</th>
                            <th>Created By</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.NonAdminUsers)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.name)</td>
                                <td>@Html.DisplayFor(modelItem => item.address)</td>
                                <td>@Html.DisplayFor(modelItem => item.email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Administrator.name)</td>
                                <td class="text-end">
                                    @Html.ActionLink("Edit", "EditNonAdmin", new { id = item.ID }, new { @class = "btn btn-sm btn-primary me-1" })
                                    @Html.ActionLink("Details", "DetailsNonAdmin", new { id = item.ID }, new { @class = "btn btn-sm btn-primary text-white me-1" })
                                    @Html.ActionLink("Delete", "DeleteNonAdmin", new { id = item.ID }, new { @class = "btn btn-sm btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="tab-pane fade @(Model.ActiveTab == "admin" ? "show active" : "")" id="admin" role="tabpanel" aria-labelledby="admin-tab">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4>Admin Users</h4>
                @Html.ActionLink("Add New User", "CreateAdmin", null, new { @class = "btn btn-primary" })
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Administrators)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.name)</td>
                                <td class="text-end">
                                    @Html.ActionLink("Edit", "EditAdmin", new { id = item.ID }, new { @class = "btn btn-sm btn-primary me-1" })
                                    @Html.ActionLink("Details", "DetailsAdmin", new { id = item.ID }, new { @class = "btn btn-sm btn-primary text-white me-1" })
                                    @if (item.ID != (int)Session["AdministratorID"])
                                    {
                                        @Html.ActionLink("Delete", "DeleteAdmin", new { id = item.ID }, new { @class = "btn btn-sm btn-primary me-1" })
                                    }
                                    else
                                    {
                                        <span class="btn btn-sm btn-secondary me-1" title="Cannot delete your own user">Delete</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-primary {
        background-color: #8058ac;
        border-color: #8058ac;
    }

    .btn-primary:hover {
        background-color: #7048a0;
        border-color: #7048a0;
    }

    .btn-primary:active {
        background-color: #7048a0;
    }

    .search-button {
        color: #8058ac;
        border-color: #8058ac;
    }

    .search-button:hover, .search-button:active {
        background-color: #8058ac;
        border-color: #8058ac;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js" integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq" crossorigin="anonymous"></script>
